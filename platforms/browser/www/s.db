/*******************************************************************************
   Drop Tables
********************************************************************************/

DROP TABLE  IF EXISTS Test;
DROP TABLE  IF EXISTS Pacientes;
DROP TABLE  IF EXISTS Usuarios;

/*******************************************************************************
   Create Tables
********************************************************************************/
CREATE TABLE IF NOT EXISTS Pacientes(cip varchar(230) not null primary key,
						nombre varchar(100),
						apellidos varchar(100),
						fechaNacimiento varchar(100),
						direccion varchar(200),
						ciudad varchar(100),
						cp number,
						telefono number	);
						
CREATE TABLE IF NOT EXISTS Test(idTest integer not null primary key autoincrement,
						nombreTest char(40),
						idPaciente integer,
						resultadoTest varchar(200),
						fechaTest varchar(100),
						notasTest varchar(254),
						FOREIGN KEY (idPaciente) REFERENCES Pacientes(cip));

CREATE TABLE IF NOT EXISTS Usuarios(id integer not null primary key autoincrement,
					   usuario varchar(254),
					   password varchar(150));